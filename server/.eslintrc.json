{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "@typescript-eslint/semi": ["error", "always"],
        "@typescript-eslint/indent": ["error", 4],
        "@typescript-eslint/space-before-function-paren": "off"
    }
}